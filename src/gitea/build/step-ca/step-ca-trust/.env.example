# Generated by stackbuilder from concatenated .env.example files
# Source files: base/.env.example, step-ca/.env.example, step-ca-trust/.env.example

USER_UID=1000
USER_GID=1000
GITEA__database__DB_TYPE=sqlite3

GITEA__service__DISABLE_REGISTRATION=true
GITEA__service__REQUIRE_SIGNIN_VIEW=true
GITEA__security__INSTALL_LOCK=true

# === OIDC CONFIGURATION ===
# Enable OAuth2 authentication
GITEA__oauth2__ENABLED=true

# Allow only external registration (disable local registration when using OIDC)
ALLOW_ONLY_EXTERNAL_REGISTRATION=false
# === STEP CA CONFIGURATION ===
# Virtual host domain for nginx-proxy
VIRTUAL_PORT=3000
VIRTUAL_HOST=gitea.local

# Step CA SSL certificate domain
LETSENCRYPT_HOST=gitea.local

# Email for Step CA certificate registration
LETSENCRYPT_EMAIL=john.smith@mail.com

ROOT_URL=https://gitea.local
#Step CA Trust
STEP_CA_TRUST=true
STEP_CA_TRUST_RESTART=true